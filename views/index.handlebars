 {{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto. 
 * Create a button in `index.handlebars`
that will submit the user input into the database. --}}

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Create and devour as many specialty burgers as you can eat at Burger-Aholics</h1>
    
    </div>
    <div class="col-sm-4">
      <h2>Burgers to Devour</h2>
      <ul>
        {{!-- unless renders a falsy value --}}
        {{#each burgers}}
        {{#unless devoured}} 
        <p>{{burger_name}}</p>
           <button class="btn change-devour" type="submit">DEVOUR</button>
        {{/unless}} 
        {{/each}}
      </ul>

     
    </div>
    <div class="col-sm-4">
        <img src="/assets/img/tasty.jpg" alt="hamburger">
    </div>
    <div class="col-sm-4">

      <h2>Burgers You've Devoured</h2>

      <ul>
        {{!-- if renders a true value --}}
        {{#each burgers}}
        {{#if devoured}} 
        <p>{{burger_name}}</p>        
         {{/if}}
         {{/each}}
      </ul>
    </div>
  </div>
</div>

  <h2>Make Your Own Burger:</h2>

    <form class="create-form">
        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="burgerName">
        </div>
        <button class="create-form submit" type="submit">Add to Menu</button>
    </form>

     <script>
        $(".create-form").on("submit", function (event) {
            // Make sure to preventDefault on a submit event.
            event.preventDefault();

            var newBurger = {
                burger: $("#burgerName").val().trim()
            };

            var id = $(this).data("id");

            // Send the POST request.
            $.ajax("/api/burger/" + id, {
                type: "POST",
                data: newBurger
            }).then(
                function () {
                    console.log("added burger");
                    // Reload the page to get the updated list
                    location.assign("/");
                }
            );
        });
    </script>


